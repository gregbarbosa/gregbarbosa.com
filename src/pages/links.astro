---
import BaseLayout from '../layouts/BaseLayout.astro'
import PageLayout from '../components/PageLayout.astro'
import { SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import { Button } from '@/components/starwind/button'

const title = 'Links'
const description = 'All my social links and online presence in one place'
---

<BaseLayout title={title} description={description}>
	<PageLayout title={title} description={description}>
		<div class="max-w-2xl mb-12">
			<div class="flex flex-col gap-4">
				{
					SocialLinks.map((link) => (
						<Button
							variant="outline"
							size="lg"
							href={link.url}
							target={link.url.startsWith('http') ? '_blank' : '_self'}
							rel={
								link.url.startsWith('http') ? 'noopener noreferrer' : undefined
							}
							aria-label={link.name}
							class="w-full justify-between h-16 hover:scale-[1.02] active:scale-[0.98] transition-transform"
						>
							<div class="flex items-center gap-4">
								<Icon name={`mdi:${link.icon}`} class="text-4xl" />
								<span class="text-xl font-semibold">{link.name}</span>
							</div>
							<Icon name="mdi:chevron-right" class="text-2xl" />
						</Button>
					))
				}
			</div>
		</div>
	</PageLayout>
</BaseLayout>
