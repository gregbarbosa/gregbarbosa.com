---
import '@/styles/starwind.css'
import '@fontsource/instrument-serif'
import '@fontsource-variable/inter'
import '@fontsource-variable/jetbrains-mono'
import BaseHead from '../components/BaseHead.astro'
import { SocialLinks, SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import { Icon } from 'astro-icon/components'
import { Button } from '@/components/starwind/button'
import { ClientRouter } from 'astro:transitions'

const title = 'Links'
const description = 'All my social links and online presence in one place'
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<ClientRouter />
	</head>
	<body
		class="text-foreground bg-background font-normal dark:text-foreground-dark dark:bg-background-dark transition-colors"
	>
		<div class="min-h-screen flex items-center justify-center py-12 px-4">
			<div class="w-full max-w-md">
				<!-- Profile Section -->
				<div class="text-center mb-8">
					<h1 class="text-4xl font-bold mb-2">{SITE_TITLE}</h1>
					<p class="text-lg text-muted-foreground">{SITE_DESCRIPTION}</p>
				</div>

				<!-- Links -->
				<div class="flex flex-col gap-4">
					{
						SocialLinks.map((link) => (
							<Button
								variant="outline"
								size="lg"
								href={link.url}
								target={link.url.startsWith('http') ? '_blank' : '_self'}
								rel={
									link.url.startsWith('http')
										? 'noopener noreferrer'
										: undefined
								}
								aria-label={link.name}
								class="w-full justify-between h-16 hover:scale-[1.02] active:scale-[0.98] transition-transform"
							>
								<div class="flex items-center gap-4">
									<Icon name={`mdi:${link.icon}`} class="text-4xl" />
									<span class="text-xl font-semibold">{link.name}</span>
								</div>
								<Icon name="mdi:chevron-right" class="text-2xl" />
							</Button>
						))
					}
				</div>

				<!-- Footer -->
				<div class="text-center mt-12">
					<Button variant="ghost" href="/" class="text-muted-foreground">
						<Icon name="mdi:arrow-left" />
						Back to website
					</Button>
				</div>
			</div>
		</div>
	</body>
</html>
