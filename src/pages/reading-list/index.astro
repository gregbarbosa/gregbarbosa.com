---
import { getCollection } from 'astro:content'
import BookCard from '../../components/BookCard.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'
import GridSection from '../../components/GridSection.astro'
import PageLayout from '../../components/PageLayout.astro'

const reviews = await getCollection('reading-list')
---

<BaseLayout
	title="Reading List | Greg Barbosa"
	description="A curated collection of books I've read, recommend, and love."
>
	<PageLayout
		title="Reading List"
		description="Micro-reviews from my bookshelf."
		constrainContent={false}
		maxWidth="clamp(20rem, 90vw, 85rem)"
	>
		<GridSection columns={{ base: 1, sm: 2, md: 3, lg: 4, xl: 3 }} class="my-6">
			{reviews.map((review) => <BookCard review={review} />)}
		</GridSection>
	</PageLayout>
</BaseLayout>
