---
import BaseLayout from '../layouts/BaseLayout.astro'
import { Image } from 'astro:assets'
import heroImage from '../assets/images/gregbarbosa.jpg'
import { SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import HeroMask from '../components/HeroMask.astro'
import { getCollection } from 'astro:content'
import { Button } from '@/components/starwind/button'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout
	title="Greg Barbosa | Technically Creative"
	description="Director of Innovation & Systems at Avulux. Building fast websites, capturing street photography, and sharing creative experiments."
>
	<HeroMask />
	<main
		id="main-content"
		class="app-container flex flex-col gap-12 justify-center py-20 md:py-0 pt-24 md:pt-34 relative"
	>
		<div class="flex flex-col lg:flex-row gap-4 items-center justify-center">
			<div class="w-full lg:w-2/4 order-2 lg:order-1">
				<div>
					<h1
						class="text-4xl md:text-6xl font-bold leading-none italic uppercase"
					>
						Technically Creative
					</h1>
				</div>
				<div class="flex gap-8 md:gap-4 pt-5">
					{
						SocialLinks.map((link) => (
							<a
								class="text-xl text-primary underline hover:underline underline-offset-4"
								href={link.url}
								target="_blank"
								aria-label={link.name}
							>
								<Icon class="text-4xl" name={`mdi:${link.icon}`} />
							</a>
						))
					}
				</div>
			</div>
			<div class="w-full lg:w-4/4 order-1 lg:order-2">
				<Image
					src={heroImage}
					alt="Greg Barbosa"
					class="w-full h-auto"
					style="clip-path: url(#hero-mask); -webkit-clip-path: url(#hero-mask);"
					loading="eager"
					fetchpriority="high"
				/>
			</div>
		</div>
	</main>

	<!-- Recent Posts Section -->
	<section class="app-container py-2">
		<h2 class="section-title">Latest Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href="/blog"
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>
</BaseLayout>
