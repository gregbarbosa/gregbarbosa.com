---
import { getCollection } from 'astro:content'
import { filterDrafts } from '../../utils/filterDrafts'
import BaseLayout from '../../layouts/BaseLayout.astro'
import BlogCard from '../../components/BlogCard.astro'
import GridSection from '../../components/GridSection.astro'
import PageLayout from '../../components/PageLayout.astro'

const posts = filterDrafts(await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout
	title="Blog | Greg Barbosa"
	description="Thoughts on software engineering, leadership, AI, and creative technology."
>
	<PageLayout
		title="Blog"
		description="Web dev, photography, and everything else."
		constrainContent={false}
		maxWidth="clamp(20rem, 90vw, 85rem)"
	>
		<GridSection columns={{ base: 1, sm: 2, md: 3, lg: 4, xl: 4 }} class="my-6">
			{posts.map((post) => <BlogCard post={post} />)}
		</GridSection>
	</PageLayout>
</BaseLayout>
