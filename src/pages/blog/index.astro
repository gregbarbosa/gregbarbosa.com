---
import { getCollection } from 'astro:content'
import BlogCard from '../../components/BlogCard.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'
import PageLayout from '../../components/PageLayout.astro'

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout
	title="Blog | Greg Barbosa"
	description="Thoughts on software engineering, leadership, AI, and creative technology."
>
	<PageLayout
		title="Blog"
		description="Web dev, photography, and everything else."
	>
		<ul class="grid my-6 gap-6 grid-cols-1 md:grid-cols-4 xl:grid-cols-4">
			{
				posts.map((post) => (
					<li>
						<BlogCard post={post} />
					</li>
				))
			}
		</ul>
	</PageLayout>
</BaseLayout>
text-xl md:text-8xl font-bold leading-none italic uppercase
