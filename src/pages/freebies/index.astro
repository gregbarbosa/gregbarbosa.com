---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import PageLayout from '../../components/PageLayout.astro'
import FreebieCard from '../../components/FreebieCard.astro'

const freebies = (await getCollection('freebies')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout
	title="Freebies"
	description="Free resources, presets, templates, and tools"
>
	<PageLayout
		title="Freebies"
		description="Free resources to help you with photography, video editing, and productivity. Download presets, templates, shortcuts, and more!"
	>
		<ul class="grid my-6 grid-cols-2 xl:grid-cols-4 gap-6">
			{
				freebies.map((freebie) => (
					<li>
						<FreebieCard freebie={freebie} />
					</li>
				))
			}
		</ul>
	</PageLayout>
</BaseLayout>
