---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import GridSection from '../../components/GridSection.astro'
import PageLayout from '../../components/PageLayout.astro'
import FreebieCard from '../../components/FreebieCard.astro'

const freebies = (await getCollection('freebies')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout
	title="Freebies"
	description="Free resources, presets, templates, and tools"
>
	<PageLayout
		title="Freebies"
		description="Free resources to help you with photography, video editing, and productivity. Download presets, templates, shortcuts, and more!"
		constrainContent={false}
		maxWidth="clamp(20rem, 90vw, 85rem)"
	>
		<GridSection columns={{ base: 2, xl: 4 }}>
			{freebies.map((freebie) => <FreebieCard freebie={freebie} />)}
		</GridSection>
	</PageLayout>
</BaseLayout>
