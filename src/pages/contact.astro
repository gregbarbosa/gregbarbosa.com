---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import { Button } from '@/components/starwind/button'
import { Input } from '@/components/starwind/input'
import { Label } from '@/components/starwind/label'
import { Textarea } from '@/components/starwind/textarea'

const title = 'Contact'
const description = 'Get in touch with Greg Barbosa'
---

<BaseLayout title={title} description={description}>
	<main id="main-content" class="app-container py-24">
		<div class="max-w-2xl mx-auto">
			<h1 class="text-4xl font-bold mb-8">Let's Talk.</h1>
			<p class="text-xl mb-8 text-muted-foreground">
				Speaking gig? Podcast guest? New favorite album? Reach out, let's talk.
			</p>

			<div class="flex gap-4 mb-12">
				{
					SocialLinks.map((link) => (
						<a
							href={link.url}
							target="_blank"
							rel="noopener noreferrer"
							class="text-muted-foreground hover:text-foreground transition-colors"
							aria-label={link.name}
						>
							<Icon name={`mdi:${link.icon}`} class="w-6 h-6" />
						</a>
					))
				}
			</div>

			<form class="grid gap-6">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="grid gap-2">
						<Label for="first-name">First Name</Label>
						<Input type="text" id="first-name" name="first-name" required />
					</div>
					<div class="grid gap-2">
						<Label for="last-name">Last Name</Label>
						<Input type="text" id="last-name" name="last-name" required />
					</div>
				</div>

				<div class="grid gap-2">
					<Label for="email">Email</Label>
					<Input type="email" id="email" name="email" required />
				</div>

				<div class="grid gap-2">
					<Label for="phone">Phone (Optional)</Label>
					<Input type="tel" id="phone" name="phone" />
				</div>

				<div class="grid gap-2">
					<Label for="message">Message</Label>
					<Textarea id="message" name="message" rows={5} required />
				</div>

				<Button type="submit" class="w-full md:w-auto">Submit</Button>
			</form>
		</div>
	</main>
</BaseLayout>
