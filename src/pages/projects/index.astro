---
import { getCollection } from 'astro:content'
import ProjectCard from '../../components/ProjectCard.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'
import GridSection from '../../components/GridSection.astro'
import PageLayout from '../../components/PageLayout.astro'

const projects = (await getCollection('projects')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout
	title="Projects | Greg Barbosa"
	description="Things I've made. Some more money, most for not."
>
	<PageLayout
		title="Projects"
		description="Things I've made, open-source code included."
		constrainContent={false}
		maxWidth="clamp(20rem, 90vw, 85rem)"
	>
		<GridSection columns={{ base: 2, md: 4, xl: 4 }} class="my-6">
			{projects.map((project) => <ProjectCard project={project} />)}
		</GridSection>
	</PageLayout>
</BaseLayout>
